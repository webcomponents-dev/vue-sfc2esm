{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "declaration": true,
    "noImplicitAny": true,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "target": "es6",
    "experimentalDecorators": true,
    "lib": [
      "es2018",
      "dom"
    ],
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
